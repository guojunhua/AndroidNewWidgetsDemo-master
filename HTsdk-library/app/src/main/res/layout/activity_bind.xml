<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_horizontal_margin">

        <ImageView
            android:id="@+id/image_back_bind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/layout_button_marginright"
            android:src="@drawable/abc_ic_ab_back_holo_light" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="绑定账号"
            android:textColor="@color/black_text"
            android:textSize="@dimen/textview_textsize" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/layout_button_marginright"
            android:src="@drawable/abc_ic_ab_back_holo_light"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/divice_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="设备绑定"
                android:textColor="@color/black_text" />

            <CheckBox
                android:id="@+id/divice_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未绑定"
                android:textColor="@color/black_text" />
        </LinearLayout>

        <Button
            android:id="@+id/divice_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonbackground"
            android:textColor="@color/white"
            android:text="绑定" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/account_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="账号绑定"
                android:textColor="@color/black_text" />

            <CheckBox
                android:id="@+id/account_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未绑定"
                android:textColor="@color/black_text" />
        </LinearLayout>

        <Button
            android:id="@+id/account_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonbackground"
            android:textColor="@color/white"
            android:text="绑定" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_weight="4">

            <TextView
                android:id="@+id/facebook_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Facebook绑定"
                android:textColor="@color/black_text" />

            <CheckBox
                android:id="@+id/facebook_stats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未绑定"
                android:textColor="@color/black_text" />
        </LinearLayout>

        <Button
            android:id="@+id/facebook_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/buttonbackground"
            android:textColor="@color/white"
            android:text="绑定" />
    </LinearLayout>

</LinearLayout>