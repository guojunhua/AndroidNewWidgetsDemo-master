<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="292dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_translucent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_horizontal_margin">

            <ImageView
                android:id="@+id/image_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/layout_button_marginright"
                android:src="@drawable/abc_ic_ab_back_holo_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/black_text"
                android:textSize="@dimen/textview_textsize" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_button_marginright"
                android:src="@drawable/abc_ic_ab_back_holo_light"
                android:visibility="invisible" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/imageview_margintop"
            android:layout_marginTop="@dimen/imageview_margintop"
            android:src="@drawable/logo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_view_width"
            android:background="@color/light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_hight"
            android:layout_marginLeft="@dimen/layout_margin_leftandright"
            android:layout_marginRight="@dimen/layout_margin_leftandright"
            android:layout_marginTop="@dimen/imageview_margintop"
            android:background="@color/white">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_imagematgin_leftandright"
                android:layout_marginRight="@dimen/layout_imagematgin_leftandright"
                android:src="@drawable/ic_user" />

            <View
                android:layout_width="@dimen/layout_view_width"
                android:layout_height="@dimen/layout_view_hight"
                android:layout_gravity="center_vertical"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/user_name_hint"
                android:textColor="@color/black_text"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/edittext_paddingleft" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_hight"
            android:layout_marginLeft="@dimen/layout_margin_leftandright"
            android:layout_marginRight="@dimen/layout_margin_leftandright"
            android:layout_marginTop="@dimen/imageview_margintop"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_imagematgin_leftandright"
                android:layout_marginRight="@dimen/layout_imagematgin_leftandright"
                android:src="@drawable/ic_pwd" />

            <View
                android:layout_width="@dimen/layout_view_width"
                android:layout_height="@dimen/layout_view_hight"
                android:layout_gravity="center_vertical"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/signup_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="@string/password_hint"
                android:textColor="@color/black_text"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/edittext_paddingleft" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_light_bg">

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_leftandright"
            android:layout_marginRight="@dimen/layout_margin_leftandright"
            android:layout_marginTop="8dp"
            android:background="@drawable/btn_orange_bg"
            android:onClick="onClick"
            android:padding="@dimen/button_padding"
            android:text="@string/signup"
            android:textColor="@android:color/white"
            android:textSize="@dimen/button_regist_textsize" />
    </LinearLayout>
</LinearLayout>