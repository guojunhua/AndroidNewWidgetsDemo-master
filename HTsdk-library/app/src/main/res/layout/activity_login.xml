<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_translucent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_horizontal_margin">
            <ImageView
                android:id="@+id/image_back_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_ic_ab_back_holo_light"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/layout_button_marginright"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="登录"
                android:textColor="@color/black_text"
                android:textSize="@dimen/textview_textsize"
                android:gravity="center"
                android:layout_weight="3"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/abc_ic_ab_back_holo_light"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/layout_button_marginright"
                android:visibility="invisible"/>

        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/imageview_margintop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_hight"
            android:layout_marginLeft="@dimen/layout_margin_leftandright"
            android:layout_marginRight="@dimen/layout_margin_leftandright"
            android:layout_marginTop="@dimen/imageview_margintop"
            android:background="@color/white" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_imagematgin_leftandright"
                android:layout_marginRight="@dimen/layout_imagematgin_leftandright"
                android:src="@drawable/ic_user" />

            <View
                android:layout_width="@dimen/layout_view_width"
                android:layout_height="@dimen/layout_view_hight"
                android:layout_gravity="center_vertical"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/user_name_hint"
                android:textColor="@color/black_text"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/edittext_paddingleft" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_hight"
            android:layout_marginLeft="@dimen/layout_margin_leftandright"
            android:layout_marginRight="@dimen/layout_margin_leftandright"
            android:layout_marginTop="@dimen/imageview_margintop"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/layout_imagematgin_leftandright"
                android:layout_marginRight="@dimen/layout_imagematgin_leftandright"
                android:src="@drawable/ic_pwd" />

            <View
                android:layout_width="@dimen/layout_view_width"
                android:layout_height="@dimen/layout_view_hight"
                android:layout_gravity="center_vertical"
                android:background="@color/light_gray" />

            <EditText
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:hint="@string/password_hint"
                android:textColor="@color/black_text"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/edittext_paddingleft" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_margin_leftandright"
            android:layout_marginRight="@dimen/layout_margin_leftandright"
            android:layout_marginTop="@dimen/imageview_margintop"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/gump_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_button_marginright"
                android:layout_weight="1"
                android:background="@drawable/btn_green_bg"
                android:text="@string/login"
                android:textSize="@dimen/button_textsize"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/gump_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_button_marginright"
                android:layout_weight="1"
                android:background="@drawable/btn_orange_bg"
                android:gravity="center"
                android:text="@string/signup"
                android:textColor="@android:color/white"
                android:textSize="@dimen/button_textsize"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>